<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @category.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @category.user.email %>
</p>

<%= link_to 'Edit', edit_category_path(@category) %>
<%= link_to 'New item', new_category_item_path(@category) %>
<%= link_to 'Back', categories_path %>


<h1>Listing items</h1>

<table>
  <thead>
  <tr>
    <th>Content</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @items.each do |item| %>
      <tr>
        <td><%= item.content %></td>
        <td><%= item.user.email %></td>
        <td><%= link_to 'Destroy', category_item_path(@category, item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>